{%- macro deep_merge(a, b) %}
{%-     for k,v in b.iteritems() %}
{%-         if v is string or v is number %}
{%-             do a.update({ k: v }) %}
{%-         elif v is not mapping %}
{%-             if a[k] is not defined %}
{%-                 do a.update({ k: v }) %}
{%-             elif a[k] is iterable and a[k] is not mapping and a[k] is not string %}
{%-                 do a.update({ k: v|list + a[k]|list}) %}
{%-             else %}
{%-                 do a.update({ k: v }) %}
{%-             endif %}
{%-         elif v is mapping %}
{%-             if a[k] is not defined %}
{%-                 do a.update({ k: v }) %}
{%-             elif a[k] is not mapping %}
{%-                 do a.update({ k: v }) %}
{%-             else %}
{%-                 do deep_merge(a[k], v) %}
{%-             endif %}
{%-         else %}
{%-            do a.update({ k: 'ERROR: case not contempled in merging!' }) %}
{%-         endif %}
{%-     endfor %}
{%- endmacro %}

{% import_yaml "rust/defaults.yaml" as default_settings %}

{% set rust_os_map = salt['grains.filter_by']({
    'Arch': {
        'debugger_pkgs': [ ],
    },
    'Debian': {
        'rust_pkg': 'rustc'
    },
}, merge=salt['pillar.get']('rust:lookup')) %}

{% do deep_merge(default_settings.rust,rust_os_map) %}

{% set rust_settings = salt['pillar.get'](
    'rust',
    default=default_settings.rust,
    merge=True)
%}
